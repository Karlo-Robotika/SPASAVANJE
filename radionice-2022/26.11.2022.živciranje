#pragma once
#include "helper.h"
void RobotLine::radionica() {
  static int raskrizje = 0;
  char simbol[10 + sizeof(char)];

  if (line(0) && line(8) and raskrizje == 0) {
    go(-60, 60);
    delayMs(500);
    raskrizje++;
  }

 else if (line(0) && line(8) and raskrizje == 1) {
    go(-60, 60);
    delayMs(500);
    raskrizje++;
  }

 else if (line(0) && line(8) and raskrizje == 2) {
    go(60, -60);
    delayMs(500);
    raskrizje++;
  }

   else if (line(0) && line(8) and raskrizje == 3) {
    go(60, 60);
    delayMs(50);
    raskrizje++;
  }

 else if (line(0) && line(8) and raskrizje == 4) {
    go(60, -60);
    delayMs(500);
    raskrizje++;
  }
 

  if (line(8))
    go(-90, 90);
  else if (line(0))
    go(90, -90);
  else if (line(7))
    go(0, 100);
  else if (line(1))
    go(100, 0);
  else if (line(6))
    go(30, 80);
  else if (line(2))
    go(80, 30);
  else if (line(5))
    go(40, 70);
  else if (line(3))
    go(70, 40);
  else if (line(4))
    go(70, 70);
  else
    go(70, 70);
    
  sprintf(simbol, "%d", raskrizje);
  display(simbol);
}
